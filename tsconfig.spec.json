{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "declaration": true,
        "outDir": "./",
        "stripInternal": true,
        "types": [
            "node",
            "jasmine"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@themost/events": [
                "./src/index"
            ]
        },
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src",
        "test.ts"
    ]
}
